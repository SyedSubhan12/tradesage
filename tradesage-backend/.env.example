# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/your_database_name

# JWT Settings
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=ES256
JWT_PRIVATE_KEY_PATH=certs/ecdsa-private.pem
JWT_PUBLIC_KEY_PATH=certs/ecdsa-public.pem
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Audience
API_GATEWAY_AUDIENCE=tradesage-api-gateway
AUTH_SERVICE_AUDIENCE=tradesage-auth-service

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/oauth/google/callback

# Redis
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development
DEBUG=True
