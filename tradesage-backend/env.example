# TradeSage Platform Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://tradesage_user:tradesage_password@localhost:5432/tradesage
POSTGRES_USER=tradesage_user
POSTGRES_PASSWORD=tradesage_password
POSTGRES_DB=tradesage

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=50

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Session Configuration
SESSION_ENCRYPTION_KEY=your-session-encryption-key-change-this
SESSION_TOKEN_EXPIRE_MINUTES=43200
REDIS_SESSION_TTL_SECONDS=2592000

# Service URLs (for docker-compose use service names)
AUTH_SERVICE_URL=http://auth-service:8001
SESSION_SERVICE_URL=http://session-service:8002
TENANT_SERVICE_URL=http://tenant-service:8003
TRADING_SERVICE_URL=http://trading-service:8004
MARKET_DATA_SERVICE_URL=http://market-data-service:8005
ANALYTICS_SERVICE_URL=http://analytics-service:8006

# MA130 Backup Server Configuration
MA130_HOST=192.168.1.100
MA130_PORT=22
MA130_USERNAME=tradesage_backup
MA130_KEY_PATH=/app/keys/ma130_rsa
MA130_BACKUP_PATH=/data/tradesage/backups

# AWS S3 Configuration (Optional fallback)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
BACKUP_S3_BUCKET=tradesage-backups

# Environment
ENVIRONMENT=production
DEBUG=false

# CORS Settings
CORS_ORIGINS=["http://localhost:8080","http://localhost:3000"]

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/oauth/google/callback

# Monitoring
GRAFANA_PASSWORD=admin
LOG_LEVEL=INFO

# Feature Flags
ENABLE_MA130_BACKUP=true
ENABLE_S3_BACKUP=false
ENABLE_TENANT_MONITORING=true
ENABLE_AUTO_BACKUP=true

# Performance Settings
MAX_CONNECTIONS_PER_SERVICE=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Security Settings
RATE_LIMIT_PER_MINUTE=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
